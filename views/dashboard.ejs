<%- include('./partials/header') %>

<h3>Your Recipes</h3>

<% if (user) { %>
    <%- include('./partials/addrecipe') %>
<% } else { %>

<% } %>



<% if (recipe.length > 0) { %>
    <% recipe.forEach(function(r) { %>
        <h5><%= r.title %></h5>
        <%- r.body %>
        Status <%= r.status %><br>
        Added on <%= r.date %><br>
        <a href="/recipes/edit/<%=r._id%>"><i class="fa fa-pencil"></i>Edit</a>
        <a href="/recipes/show/<%=r._id%>">Show</a>
        <form action="/recipes/<%=r._id%>?_method=DELETE" method="POST" id="delete-form">
            <button type="submit" class="btn red"><i class="fa fa-remove"></i>Delete</button>
        </form><br><br>
        <% }); %>
<% } else { %>
    <p>No recipes available yet.</p>
<% } %><br><br>



<%- include('./partials/footer') %>

</body>

</html>